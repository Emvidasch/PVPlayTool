<Window x:Class="PVPlayTool.View.DarkSouls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PVPlayTool.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="PVPlayTool - Dark Souls" Height="720" Width="1280" Background="#FF212121" Closed="OnDarkSoulsClose">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="29" Margin="1091.5,510,0,0" TextWrapping="Wrap" Text="Build Editor" VerticalAlignment="Top" Width="156.5" Foreground="#FFDEDEDE" TextAlignment="Center" FontSize="24" TextDecorations="{x:Null}" FontFamily="OptimusPrincepsSemiBold"/>
        <Button x:Name="btn_BuildEditor" HorizontalAlignment="Left" Height="128" Margin="1107.5,544,0,0" VerticalAlignment="Top" Width="128" Template="{DynamicResource ImageButton}" Cursor="Hand" Click="btn_BuildEditor_Click">
            <Image Source="/PVPlayTool;component/Assets/Dark Souls/Icons/tex_DaS_BuildIcon.jpg" Stretch="UniformToFill"/>
        </Button>
        <Button x:Name="btn_Labyrinth" HorizontalAlignment="Left" Height="320" Margin="30,10,0,0" VerticalAlignment="Top" Width="564" Template="{DynamicResource ImageButton}" Cursor="Hand" Background="#FF212121">
            <Image Source="/PVPlayTool;component/Assets/Shared/tex_Labyrinth.jpg"/>
        </Button>
        <Button x:Name="btn_RagsToRiches" Height="320" Margin="0,10,30,0" VerticalAlignment="Top" Template="{DynamicResource ImageButton}" Cursor="Hand" Background="#FF212121" HorizontalAlignment="Right" Width="564">
            <Image Source="/PVPlayTool;component/Assets/Shared/tex_RagsToRiches.jpg"/>
        </Button>
    </Grid>
</Window>
